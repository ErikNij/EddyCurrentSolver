source "$FOAM_USER_ETC/user/tools.sh"

# --------------------------------------------------------------------------- #
# --- Script ---------------------------------------------------------------- #
# --------------------------------------------------------------------------- #

cd ${0%/*} || exit 1

if [ -e 'src/Allwmake' ]; then src/Allwmake || exit 1; fi
if [ -e 'applications/Allwmake' ]; then applications/Allwmake || exit 1; fi

